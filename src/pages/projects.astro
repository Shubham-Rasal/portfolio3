---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/react/ProjectCard.tsx";

import projects from "../content/projects/projects.json";
---

<Layout title="Projects">
  <h1 class="text-2xl font-bold text-center my-4">Projects</h1>
  <main
    class="w-1/2 mx-auto grid justify-center gap-2 md:grid-cols-3 grid-cols-2 px-2"
  >
    {projects.map((project) => <ProjectCard {...project} />)}
  </main>
</Layout>
