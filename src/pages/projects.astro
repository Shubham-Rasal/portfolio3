---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/react/ProjectCard.tsx";

import projects from "../content/projects/projects.json";
---

<Layout title="Projects">
  <h1 class="text-2xl font-bold text-center my-8">Projects</h1>
  <main
    class="w-full max-w-5xl mx-auto grid  sm:grid-cols-2 lg:grid-cols-3 gap-3 px-2 md:px-4 py-4 justify-center"
  >
    {projects.map((project) => <ProjectCard {...project} />)}
  </main>
</Layout>
